<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>registersWebhookURL</servlet-name>
        <servlet-class>com.mizo0203.twitter.timeline.talker.RegistersWebhookUrlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registersWebhookURL</servlet-name>
        <url-pattern>/registersWebhookURL</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>subscriptions</servlet-name>
        <servlet-class>com.mizo0203.twitter.timeline.talker.SubscriptionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>subscriptions</servlet-name>
        <url-pattern>/subscriptions</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>twitter_hook</servlet-name>
        <servlet-class>com.mizo0203.twitter.timeline.talker.TwitterHookHandlerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>twitter_hook</servlet-name>
        <url-pattern>/twitter_hook</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.mizo0203.twitter.timeline.talker.repo.objectify.OfyHelper</listener-class>
    </listener>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
